# Configuration NMEA Server
# Copiez ce fichier en .env et adaptez les valeurs

# Debug mode (affiche plus d'informations)
DEBUG=False

# Configuration port s√©rie
ENABLE_SERIAL=True
# Windows: COM1, COM2, COM3, etc.
# Linux: /dev/rfcomm0, /dev/ttyUSB0, etc.
SERIAL_PORT=COM3
