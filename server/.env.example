# Configuration UDP
ENABLE_UDP=True
UDP_IP=0.0.0.0
UDP_PORT=5005

# Configuration TCP
ENABLE_TCP=True
TCP_IP=0.0.0.0
TCP_PORT=5006

# Port HTTPS du serveur web
HTTPS_PORT=5000
